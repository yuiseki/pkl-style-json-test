input = read("prop:input")

local inputUri =
  if (input.startsWith(Regex(#"\w+:"#))) input      // absolute URI
  else if (input.startsWith("/")) "modulepath:\(input)" // absolute file path
  else "modulepath:\(input)"         // relative file path

file = read(inputUri)

output {
  value = file
  renderer = new PcfRenderer {}
}
